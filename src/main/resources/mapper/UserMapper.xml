<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team.aphs.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.team.aphs.model.User">
        <!-- 省略其他字段映射 -->
        <result column="password" property="password"/>
        <result column="salt" property="salt"/>
    </resultMap>

    <select id="findByUsername" resultMap="BaseResultMap">
        SELECT * FROM user WHERE account = #{username}
    </select>

    <update id="updateUserToken">
        UPDATE user SET password = #{password}, salt = #{salt} WHERE user_id = #{userId}
    </update>
</mapper>
